@model IEnumerable<EnginX.Models.Product_Category>

@{
    ViewBag.Title = "Index";
}



<h2 class="mb-5">Product Categories</h2>
<div class="row">
    <div class="col">
        <div class="cardsss shadow">
            <div class="cardsss-header border-0">
                <h3 class="mb-0">Store Product Categories</h3>
            </div>
            <div class="table-responsive">
                <table id="tbl" class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Product Category</th>
                            <th scope="col">Description</th>
                            <th></th>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>
                                    @product.Name
                                </td>
                                <td>
                                    @product.Description
                                </td>
                                <td class="text-right">

                                    <div class="btn-group dropdown-menu-end">
                                        <button class="btn btn-sm btn-icon-only text-dark" role="button" onclick="window.location.href = '@Url.Action("Edit","Products",new {id = product.ProductCategoryID })'">
                                            <i class="fas fa-pencil"></i>
                                        </button>
                                        <button class="btn btn-sm btn-icon-only text-primary" role="button" onclick="window.location.href = '@Url.Action("Details","Products",new { id = product.ProductCategoryID })'">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-icon-only text-success" role="button" onclick="window.location.href = '@Url.Action("Delete","Products",new { id = product.ProductCategoryID })'">
                                            <i class="fas fa-trash"></i>
                                        </button>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<br />