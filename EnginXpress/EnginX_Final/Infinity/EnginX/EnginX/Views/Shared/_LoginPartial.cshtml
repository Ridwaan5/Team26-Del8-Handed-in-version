@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

<ul class="navbar-nav ml-auto">
    <li class="nav-item">
        @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class= "nav-link" })
    </li>
    <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a><i class="fas fa-tachometer-alt"></i></li>
</ul>
    }
}
else
{
<ul class="navbar-nav ml-auto ">
    <li class="btn-group" style="margin-left:-5%">
        <button class="btn btn-sm  " style="color: rgba(255,255,255); border-top-left-radius: 30px; border-bottom-left-radius: 30px " onclick="window.location.href='/Account/Register'">
            Register
        </button>
        <button class="btn btn-sm " style="color: rgba(255,255,255); border-top-right-radius: 30px; border-bottom-right-radius: 30px " onclick="window.location.href='/Account/Login'">
            Login
        </button>
    </li>
</ul>
}
